{
	"compilerOptions": {
		"target": "ES2020", // JS 타깃 버전
		"module": "commonjs", // 모듈 시스템 (Node.js 기본)
		"rootDir": "./src", // 입력 파일 위치
		"outDir": "./dist", // 컴파일된 JS 출력 위치
		"strict": true, // 엄격한 타입 검사
		"esModuleInterop": true, // commonjs ↔ es module 호환
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}

